@page
@model Affinidi_Login_Demo_App.Pages.CredentialVerificationModel
@{
    ViewData["Title"] = "Credential Verification";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5">
                    <p class="lead mb-4 text-center">Paste the Verifiable Credential (VC) or Verifiable Presentation (VP) in the text area below to verify it.</p>

                    <form method="post">
                        <div class="d-flex justify-content-center mb-3">
                            <div class="btn-group" role="group" aria-label="VC/VP Toggle">
                                <input type="radio" class="btn-check" name="CredentialType" id="vcRadio" value="VC" checked autocomplete="off">
                                <label class="btn btn-outline-primary" for="vcRadio">VC</label>
                                <input type="radio" class="btn-check" name="CredentialType" id="vpRadio" value="VP" autocomplete="off">
                                <label class="btn btn-outline-primary" for="vpRadio">VP</label>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" placeholder="Paste credential here" id="credentialData" name="CredentialData" style="height: 200px"></textarea>
                            <label for="credentialData">Verifiable Credential / Presentation</label>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">Verify Credential</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>