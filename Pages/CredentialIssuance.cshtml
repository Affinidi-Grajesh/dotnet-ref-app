@page
@model Affinidi_Login_Demo_App.Pages.CredentialIssuanceModel
@{
    ViewData["Title"] = "Credential Issuance Service";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <p class="lead mb-4">Select a credential type to issue to demonstrate different issuance flows.</p>
                    @if (TempData["IssuanceMessage"] != null)
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["IssuanceMessage"]
                        </div>
                    }
                    <form method="post">
                        <div class="d-grid gap-3">
                            <button asp-page-handler="IssueEmail" class="btn btn-primary btn-lg" type="submit">Issue Email Credential</button>
                            <button asp-page-handler="IssuePhone" class="btn btn-secondary btn-lg" type="submit">Issue Phone Credential</button>
                            <button asp-page-handler="IssueResidence" class="btn btn-success btn-lg" type="submit">Issue Proof of Residence Credential</button>
                            <button asp-page-handler="IssueCustom" class="btn btn-info btn-lg text-dark" type="submit">Issue Custom Credential</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>