@page
@model Affinidi_Login_Demo_App.Pages.CredentialIssuanceModel
@{
    ViewData["Title"] = "Credential Issuance Service";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5 text-center">
                    @if (TempData["IssuanceId"] != null)
                    {
                        <div class="alert alert-success d-flex align-items-center">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <div>
                                <h4>Credential Offer Ready!</h4>

                            </div>
                        </div>

                        <div class="text-start mt-4">
                            <strong>Offer URL:</strong>
                            <p class="border p-2 bg-light text-break">@TempData["CredentialOfferUri"]</p>

                            <strong>Transaction Code:</strong>
                            <p class="border p-2 bg-light">@TempData["TxCode"]</p>

                            <strong>Issuance ID:</strong>
                            <p class="border p-2 bg-light text-break">@TempData["IssuanceId"]</p>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            @if (TempData["ClaimUrl"] != null)
                            {
                                <a href="@TempData["ClaimUrl"]" class="btn btn-success btn-lg" target="_blank" rel="noopener noreferrer">
                                    <i class="bi bi-check2 me-2"></i>Claim Offer
                                </a>
                            }
                            <a href="/CredentialIssuance" class="btn btn-secondary btn-lg">Return Back</a>
                        </div>

                        <hr class="my-5" />

                        <div class="text-start">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <div>
                                    <h4 class="mb-0">Credential Status</h4>
                                </div>
                            </div>

                            <button asp-page-handler="CheckCredentialStatus" class="btn btn-primary btn-lg mt-3" type="submit">Check Credential Status</button>
                        </div>
                    }
                    else
                    {
                        <p class="lead mb-4">Select a credential type to issue to demonstrate different issuance flows.</p>
                        <form method="post">
                            <div class="d-grid gap-3">
                                <button asp-page-handler="IssuePersonalInfo" class="btn btn-success btn-lg" type="submit">Issue Personal Information Credential</button>
                                <button asp-page-handler="IssueEducation" class="btn btn-success btn-lg" type="submit">Issue Education Verification Credential</button>
                                <button asp-page-handler="IssueEmployment" class="btn btn-success btn-lg" type="submit">Issue Employment Credential</button>
                                <button asp-page-handler="IssueResidence" class="btn btn-success btn-lg" type="submit">Issue Proof of Residence Credential</button>
                                <button asp-page-handler="IssueRevocable" class="btn btn-success btn-lg" type="submit">Issue Revocable Credential</button>
                                <button asp-page-handler="IssueBatch" class="btn btn-success btn-lg" type="submit">Issue Batch Credential</button>
                                <button asp-page-handler="IssueCustom" class="btn btn-info btn-lg text-dark" type="submit">Issue Custom Credential</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>